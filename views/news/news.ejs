<%- include ../include/head %>
<%- include ../include/header %>

 <div data-am-widget="tabs" class="am-tabs am-tabs-d2" data-am-scrollspy="{ animation: 'slide-left'}">
      
      <ul class="am-tabs-nav am-cf">
          <li class="am-active"><a href="[data-tab-panel-0]">新闻</a></li>
          <li class=""><a href="[data-tab-panel-1]">通知</a></li>
          <li class=""><a href="[data-tab-panel-2]">招聘</a></li>
      </ul>

      <div class="am-tabs-bd" >

          <div data-tab-panel-0 class="am-tab-panel am-active" style="width: auto;">
              <div data-am-widget="list_news" class="am-list-news am-list-news-default" >
                  <!--列表标题-->
                  <div class="am-list-news-bd">
                    <ul class="am-list">
                       <% news.forEach(function(news){ %>

                        <li class="am-g am-list-item-desced am-list-item-thumbed am-list-item-thumb-left"
                        data-am-scrollspy="{ animation: 'slide-right'}">
                        <a href="/news/newDetail?id=<%= news.id %>" class="">
                          <div class="am-u-sm-4 am-list-thumb">
                              <img src=<%= news.imgUrl %> alt=""/>
                          </div>

                          <div class=" am-u-sm-8 am-list-main">

                              <h6 class="am-list-item-hd">
                                <%= news.title %>
                              </h6>

                              <div class="am-list-item-text">
                                <%= news.content %>
                              </div>

                          </div>
                          </a>
                        </li>
                      <% }) %>

                      
                      </ul>
                  </div>
              </div>
          </div>
          <!-- 通知面板 -->
          <div data-tab-panel-1 class="am-tab-panel am-list-news-default" style="width:auto;padding: 0;">
                <div data-am-widget="list_news" class="am-list-news am-list-news-default" style="margin-top: 0;" >
                  <!--列表标题-->
                  <div class="am-list-news-bd">
                    <ul class="am-list">

                       <% informs.forEach(function(informs){ %>

                        <li class="am-g am-list-item-desced am-list-item-thumbed am-list-item-thumb-left"
                       >
                        <a href="/news/informsDetal?id=<%= informs.id %>" class="">
                          <div class="am-u-sm-4 am-list-thumb">
                              <img src=<%= informs.imgUrl %> alt=""/>
                          </div>

                          <div class=" am-u-sm-8 am-list-main">

                              <h6 class="am-list-item-hd">
                                <%= informs.title %>
                              </h6>

                              <div class="am-list-item-text">
                                <%= informs.content %>
                              </div>

                          </div>
                          </a>
                        </li>
                      <% }) %>

                      
                      </ul>
                  </div>
              </div>

          </div>
          <!-- 招聘面板 -->
          <div data-tab-panel-2 class="am-tab-panel">
            <div data-am-widget="list_news2" class="am-list-news am-list-news-default">
              <div class="am-list-news-bd">
                <ul class="am-list">

                  <% recruits.forEach(function(recruits){ %>
                  <li class="am-g" >
                    <a href="/news/recruitsDetal?id=<%= recruits.id %>" class="am-list-item-hd">
                       
                      <h6 class="am-list-item-hd">
                        <%= recruits.title%>
                      </h6>
                    
                    <div class="am-list-item-text" style="text-overflow: ellipsis;"><%= recruits.content %></div>
                    </a>
                  </li>
                  <% }) %>
                </ul>
              </div>
            </div>
          </div>

      </div>
  </div>
<%- include ../include/footer %>
<%- include ../include/foot %>